# LLM
OPENAI_API_KEY=your_openai_api_key_here

# Web Search
TAVILY_API_KEY=your_tavily_api_key_here

# LangSmith (Tracing & Evaluation)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=deep-research-agent
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ChromaDB (Vector Store)
# Default: runs locally, no key needed
# For Chroma Cloud: set this
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION=research_findings

# Optional: Pinecone (alternative vector store)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=us-east-1
# PINECONE_INDEX=research-agent

# Agent Config
MAX_SEARCH_RESULTS=5
MAX_ITERATIONS=3
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
